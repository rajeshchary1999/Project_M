<% layout("/layouts/boilerpate.ejs") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Listing Details </h3>
        </div>

            <div class="card col-6 offset-2 show-card">
                <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
                <div class="card-body">
                  <p class="card-text">
                    <b><%= listing.title %></p></b> <br>
                    <%= listing.description %> <br>
                    &#8377;<%= Number(listing.price).toLocaleString( { style: 'currency',currency: 'INR' }) %> <br>
                    <%= listing.location %> <br>
                    <%= listing.country %> 
                </div>
            </div>
            <div class="btns">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark  offset-2">Edit</a>
                <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
                    <button class="btn btn-dark offset-4">Delete</button>
                </form>
            </div>
    </div>
</div>
<br/><br/>


